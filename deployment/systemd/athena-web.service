[Unit]
Description=Athena Web - OpenClaw Workspace Interface
Documentation=https://github.com/yourusername/athena-web
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=perttu
Group=perttu
WorkingDirectory=~/athena-web

# Environment
Environment=NODE_ENV=production
Environment=PORT=9000
Environment=PATH=/usr/local/bin:/usr/bin:/bin
EnvironmentFile=-/etc/athena-web/env

# Execution
ExecStartPre=/usr/bin/bash -lc ./deployment/scripts/pre-start.sh
ExecStart=/usr/bin/node server.js
ExecReload=/bin/kill -HUP $MAINPID

# Restart policies
Restart=always
RestartSec=10
StartLimitInterval=300
StartLimitBurst=5

# Resource limits
LimitNOFILE=65536
LimitNPROC=4096
MemoryMax=512M
CPUQuota=200%

# Security hardening
NoNewPrivileges=true
# Must see the shared tmux socket at /tmp/openclaw-coding-agents.sock
PrivateTmp=false
ProtectSystem=strict
ProtectHome=false

# Process management
KillMode=mixed
KillSignal=SIGTERM
TimeoutStopSec=30

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=athena-web

[Install]
WantedBy=multi-user.target
