# Athena Web - Production Environment Configuration
# Copy this file to $HOME/athena-web/.env.production
# Update all values marked with <CHANGE_ME>

# ============================================================================
# Application
# ============================================================================
NODE_ENV=production
PORT=9000
HOST=127.0.0.1

# ============================================================================
# Paths
# ============================================================================
WORKSPACE_PATH=$HOME/.openclaw/workspace
TMUX_SOCKET=/tmp/openclaw-coding-agents.sock
LOG_PATH=$HOME/athena-web/logs

# ============================================================================
# Security
# ============================================================================
# Generate with: openssl rand -hex 32
SESSION_SECRET=<CHANGE_ME_GENERATE_RANDOM_SECRET>

# CORS settings (comma-separated origins)
CORS_ORIGINS=https://athena.local

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Beads CLI
# ============================================================================
BEADS_CLI=br
BEADS_LIST_COMMAND=list
BEADS_CREATE_COMMAND=create
BEADS_CLOSE_COMMAND=close

# ============================================================================
# Monitoring
# ============================================================================
# Enable metrics collection
METRICS_ENABLED=true
METRICS_PORT=9001

# Health check interval (ms)
HEALTH_CHECK_INTERVAL=30000

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=10
LOG_MAX_SIZE=10485760

# ============================================================================
# Performance
# ============================================================================
# SSE connection timeout (ms)
SSE_TIMEOUT=86400000

# Request timeout (ms)
REQUEST_TIMEOUT=30000

# ============================================================================
# Backup
# ============================================================================
BACKUP_ENABLED=true
BACKUP_PATH=$HOME/athena-web/backups
BACKUP_RETENTION_DAYS=30

# ============================================================================
# Alerts
# ============================================================================
# Webhook URL for alerts (e.g., Slack, Discord)
ALERT_WEBHOOK_URL=

# Email alerts (if configured)
ALERT_EMAIL=
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
